# Complete workspace isolation for example projects
# This directory should be treated as a separate repository

# Don't link to workspace packages
link-workspace-packages=false

# Use independent lockfile
shared-workspace-lockfile=false

# Don't save workspace protocol in package.json
save-workspace-protocol=false

# Use prefer-offline for faster installs in Docker
prefer-offline=true

# Force pnpm as the only allowed package manager
# This prevents accidental use of npm or yarn
engine-strict=true

# Prevent package-lock.json generation
package-lock=false

# pnpm configuration
shamefully-hoist=false
strict-peer-dependencies=false
auto-install-peers=true
