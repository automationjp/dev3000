{
  "name": "dev3000",
  "version": "0.0.68-canary",
  "description": "AI-powered development tools with browser monitoring and MCP server integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dev3000": "dist/cli.js",
    "d3k": "dist/cli.js"
  },
  "files": [
    "dist/",
    "src/tui-interface-impl.tsx",
    "mcp-server/app/",
    "mcp-server/.next/",
    "mcp-server/public/",
    "mcp-server/package.json",
    "mcp-server/tsconfig.json",
    "mcp-server/next.config.ts",
    "mcp-server/next-env.d.ts",
    "mcp-server/postcss.config.mjs",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && mkdir -p dist/src && cp src/loading.html dist/src/ && cp src/tui-interface-impl.tsx dist/src/",
    "typegen": "./scripts/typegen.sh",
    "typecheck": "./scripts/typegen.sh && tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome check src mcp-server www scripts",
    "lint:fix": "biome check --write src mcp-server www scripts",
    "test": "vitest run",
    "test-postinstall": "tsx scripts/test-postinstall.ts",
    "test-global-install": "tsx scripts/test-global-install.ts",
    "test-clean-install": "tsx scripts/test-clean-install.ts",
    "test-before-release": "./scripts/test-before-release.sh",
    "prepare": "husky",
    "release": "./scripts/release.sh",
    "canary": "./scripts/canary.sh"
  },
  "keywords": [
    "nextjs",
    "ai",
    "development",
    "chrome-devtools-protocol",
    "cdp",
    "mcp",
    "browser-monitoring",
    "debugging",
    "claude"
  ],
  "dependencies": {
    "@antfu/ni": "^26.0.1",
    "@biomejs/biome": "^2.2.4",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "catalog:",
    "ink": "^6.3.1",
    "mcp-handler": "catalog:",
    "ora": "^9.0.0",
    "package-manager-detector": "^1.3.0",
    "ws": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/ws": "catalog:",
    "husky": "^9.0.0",
    "js-yaml": "^4.1.0",
    "react": "catalog:",
    "tsx": "^4.20.3",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vercel-labs/dev3000.git"
  },
  "author": "Lindsey Simon <lindsey@vercel.com>",
  "license": "MIT"
}
