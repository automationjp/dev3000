{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none",
      "semicolons": "asNeeded",
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off",
        "noSvgWithoutTitle": "off",
        "useFocusableInteractive": "warn",
        "useSemanticElements": "warn",
        "useButtonType": "warn",
        "useAriaPropsForRole": "warn"
      },
      "performance": {
        "noImgElement": "warn"
      },
      "correctness": {
        "noUnusedImports": { "level": "on", "fix": "unsafe" },
        "noUnusedVariables": { "level": "on", "fix": "unsafe" },
        "useExhaustiveDependencies": "warn",
        "useUniqueElementIds": "warn",
        "noNestedComponentDefinitions": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "error"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      }
    }
  }
}
